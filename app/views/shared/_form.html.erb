<form class="<%= css_class %>" action="<%= action_url %>" method="post">
  <%= render 'shared/csrf' %>
  <input class="username" type="text" name="user[username]" value="<%= user.username %>" placeholder="Username">
  <input class="password" type="password" name="user[password]" placeholder="Password">
  <input class="submit" type="submit" value="<%= action_text %>">
</form>
